{
    "manifest_version": 2,

    "name": "Instagramarator",
    "description": "This extension makes it easier to download an Instagram image.",
    "version": "1.0",
    "permissions": [
        "tabs", 
        "http://instagram.com/*"
    ],
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": ["http://instagram.com/*"],
            "js": ["jquery.min.js", "inject.js"]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}

